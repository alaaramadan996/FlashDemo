<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Date">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>
    <style name="editText">
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>
    <style name="btn_nav">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>

        <item name="android:background">@drawable/shape_text_view</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="txt_res">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/_30sdp</item>
    <item name="android:layout_marginTop">@dimen/_5sdp</item>
    <item name="android:layout_marginStart">@dimen/_15sdp</item>
    <item name="android:layout_marginEnd">@dimen/_15sdp</item>
    <item name="android:background">@drawable/shape_edit_text</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/_12ssp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>

    </style>

    <style name="btn_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/_30sdp</item>
    <item name="android:layout_marginTop">@dimen/_5sdp</item>
    <item name="android:layout_marginStart">@dimen/_15sdp</item>
    <item name="android:layout_marginEnd">@dimen/_15sdp</item>
    <item name="android:background">@drawable/shape_btn_login</item>
    <item name="android:textColor">@color/colorFragment</item>
    <item name="android:textSize">@dimen/_12ssp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>

    </style>

    <style name="tv_style">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/shape_text_view</item>
    <item name="android:textColor">@color/colorText</item>
    <item name="android:textSize">@dimen/_12ssp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>

     </style>
    <style name="et_style">
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="li_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>

    </style>

</resources>