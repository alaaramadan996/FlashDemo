<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.user_cycle.ConnectUsFragment"
        android:orientation="vertical"

        android:background="@color/colorFragment"
        >

        <TextView
            android:id="@+id/connect_fragment_us_tv_fb"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/btn_style"
            android:background="@drawable/shape_conact_fb"
            android:textColor="@color/white"
           />
        <TextView
            android:id="@+id/connect_fragment_us_tv_whats_up"
            style="@style/btn_style"
            android:background="@drawable/shape_conect_whatsup"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/connect_fragment_us_tv_telephone"
            style="@style/btn_style"
            android:textColor="@color/white"
            android:background="@drawable/shape_conect_televon"
            />
        <TextView
            android:id="@+id/connect_fragment_us_tv_location"
            android:background="@drawable/shape_connect_location"
            style="@style/btn_style"
            android:textColor="@color/white"
            />

    </LinearLayout>
</layout>