<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.user_cycle.NewAcountStepThreeFragment"
        android:orientation="vertical"
        android:background="@color/colorFragment"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/shape_btn_security"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"

                android:layout_marginEnd="@dimen/_200sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:gravity="center"
                android:text=" 2/5"
                android:textColor="@color/colorFragment"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"

                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_100sdp"

                android:layout_marginBottom="@dimen/_8sdp"
                android:gravity="center"
                android:text=" البيانات الشخصية "
                android:textColor="@color/colorFragment"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            style="@style/li_style"
            >
            <EditText
                android:id="@+id/new_account_step_three_et_name_user"
                style="@style/et_style"
                android:maxLength="50"

                />
            <TextView
                style="@style/tv_style"
                android:text=" الاسم بالكامل "
                />
        </LinearLayout>
        <LinearLayout
            style="@style/li_style"
            >
            <TextView
                android:id="@+id/new_account_step_three_et_date"
                style="@style/et_style"

                />
            <TextView
                android:id="@+id/new_account_step_three_tv_date"
                style="@style/tv_style"
                android:text=" تاريخ الميلاد "
                android:drawableStart="@drawable/ic_baseline_arrow_drop_down"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/li_style"
            >
            <TextView
                android:id="@+id/new_account_step_three_et_gender"
                style="@style/et_style"

                />
            <TextView
                android:id="@+id/new_account_step_three_tv_gender"
                android:drawableStart="@drawable/ic_baseline_arrow_drop_down"
                android:text=" الجنس "
                style="@style/tv_style"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/li_style"
            >
            <TextView
                android:id="@+id/new_account_step_three_et_governorate"
                style="@style/et_style"

                />
            <TextView
                android:id="@+id/new_account_step_three_tv_gov"
                android:drawableStart="@drawable/ic_baseline_arrow_drop_down"
                android:text=" المحافظة "
                style="@style/tv_style"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/li_style"
            >
            <TextView
                android:id="@+id/new_account_step_three_et_city"
                style="@style/et_style"

                />
            <TextView
                android:id="@+id/new_account_step_three_tv_city"
                android:drawableStart="@drawable/ic_baseline_arrow_drop_down"
                android:text=" المدينة "
                style="@style/tv_style"
                />
        </LinearLayout>

        <Button
            android:id="@+id/new_account_step_three_btn_next"
            style="@style/btn_style"
            android:text=" المرحلة الثانية"
            />
        <TextView
            android:id="@+id/new_account_step_three_tv_show_message"
            style="@style/txt_res"
            android:layout_marginBottom="@dimen/_25sdp"

            />


    </LinearLayout>
</ScrollView>
</layout>