<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
       android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activities.HomeActivity"

        >


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            app:itemBackground="@drawable/bk_btn_nav_home"
            android:layout_marginBottom="@dimen/_70sdp"
            android:background="@drawable/bk_nav_home"
            app:itemTextAppearance="@color/white"
            android:layout_marginStart="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_50sdp"


            >
           <FrameLayout
               android:id="@+id/home_activity_nav_view"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>



        </com.google.android.material.navigation.NavigationView>
        <include
            layout="@layout/activity_home_containt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>