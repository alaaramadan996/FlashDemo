<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/colorFragment"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.user_cycle.SecurityConfirmationFragment"
        android:background="@color/colorFragment"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/li_style"
            >
            <EditText
                android:id="@+id/security_confirmation_fragment_et_pin_code"
                style="@style/et_style"
                android:maxLength="4"
                android:inputType="number"

                />
            <TextView
                style="@style/tv_style"
                android:text="التاكيد الامني" />
        </LinearLayout>
        <Button
            android:id="@+id/security_confirmation_fragment_btn_confirm"
            style="@style/btn_style"
            android:text="تأكيد"
            />
        <TextView
            android:id="@+id/security_confirmation_fragment_tv_show_message"
            style="@style/txt_res"

            />


    </LinearLayout>
   </ScrollView>
</layout>